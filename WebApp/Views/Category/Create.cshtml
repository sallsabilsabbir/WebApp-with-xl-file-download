
@model Category
<form class="form-control border-info" method="post">
    <div class="">
        <div class="row pb-2  text-center">
            <h2 class="text-black-50">Create New</h2>
            <hr style="color:gray; height:5px"  />
        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-2">
        <label asp-for="Name" ></label>
        <input asp-for="Name" class="form-control " placeholder="Enter Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control " placeholder="Enter Order Number"/>
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>
    <button class="btn btn-info"> Create </button>
    <button asp-controller="Category" asp-action="Index" class="btn btn-secondary"> Back To List </button>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
